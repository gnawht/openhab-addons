<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="vblindbinding"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<thing-type id="vblind">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge"/>
		</supported-bridge-type-refs>

		<label>VBlind</label>
		<description>VBlind</description>

		<channels>
			<channel id="pos_channel" typeId="pos_channel_type"/>
			<channel id="dim_channel" typeId="dim_channel_type"/>
			<channel id="pos_state_channel" typeId="pos_state_channel_type"/>
			<channel id="control_channel" typeId="control_channel_type"/>
		</channels>

		<config-description>
			<parameter name="major" type="integer" required="true" min="1" max="200">
				<label>Major</label>
				<description>Major 1-200</description>
			</parameter>
			<parameter name="minor" type="integer" required="true" min="1" max="200">
				<label>Minor</label>
				<description>Minor 1-200</description>
			</parameter>
			<parameter name="pos1" type="text" required="false">
				<label>Pos1</label>
				<description>Predefined position 1 eg. "50:100" [pos 0-100(pct):dim 0-180(deg)]</description>
			</parameter>
			<parameter name="pos2" type="text" required="false">
				<label>Pos2</label>
				<description>Predefined position 2 eg. "50:100" [pos 0-100(pct):dim 0-180(deg)]</description>
			</parameter>
			<parameter name="pos3" type="text" required="false">
				<label>Pos3</label>
				<description>Predefined position 3 eg. "50:100" [pos 0-100(pct):dim 0-180(deg)]</description>
			</parameter>
		</config-description>
	</thing-type>


	<!-- Sample Channel Type -->
	<channel-type id="pos_channel_type">
		<item-type>Number</item-type>
		<label>Pos</label><!-- Use uppercase words, except prepositions. 2-3 words, max 25 chars -->
		<description>Position in pct</description>
		<state min="0" max="100" step="1" readOnly="false"/>
	</channel-type>
	<channel-type id="dim_channel_type">
		<item-type>Number</item-type>
		<label>Dim</label><!-- Use uppercase words, except prepositions. 2-3 words, max 25 chars -->
		<description>Dim in deg (0-180)</description>
		<state min="0" max="180" step="1" readOnly="false"/>
	</channel-type>
	<channel-type id="pos_state_channel_type">
		<item-type>String</item-type>
		<label>Pos State</label>
		<description>Pos State [open, close, close_black, pos1, pos2, pos3, change, unknown]</description>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="control_channel_type">
		<item-type>String</item-type>
		<label>Control</label>
		<description>Control commands</description>
		<command>
			<options>
				<option value="stop">Stop</option>
				<option value="goto_open">Open</option>
				<option value="goto_close">Close</option>
				<option value="goto_close_black">Close Black</option>
				<option value="goto_pos1">Pos1</option>
				<option value="goto_pos2">Pos2</option>
				<option value="goto_pos3">Pos3</option>
			</options>
		</command>
	</channel-type>

</thing:thing-descriptions>
